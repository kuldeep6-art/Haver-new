@model haver.Models.SalesOrder

@if (TempData["Message"] != null)
{
    <div id="autoDismissAlert" class="alert alert-success alert-dismissible fade show mb-4" role="alert">
        <i class="fas fa-check-circle"></i>
        @TempData["Message"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div id="printableArea">
    <div class="container-fluid">

        <div class="row">
            <div class="col-md-6">
                <div class="info-box p-3 bg-light border rounded">
                    <h5 class="fw-bold text-center section-header">Sales Order Details</h5>
                    <dl class="row">
                        <dt class="col-md-6">Order Number</dt>
                        <dd class="col-md-6">@Html.DisplayFor(model => model.OrderNumber)</dd>

                        <dt class="col-md-6">Sales Order Date</dt>
                        <dd class="col-md-6">@Html.DisplayFor(model => model.SoDate)</dd>

                        <dt class="col-md-6">Price</dt>
                        <dd class="col-md-6">@Html.DisplayFor(model => model.allprice)</dd>

                        <dt class="col-md-6">Approval Drawing Expected</dt>
                        <dd class="col-md-6">@Html.DisplayFor(model => model.AppDwgExp)</dd>

                        <dt class="col-md-6">Approval Drawing Release</dt>
                        <dd class="col-md-6">@Html.DisplayFor(model => model.AppDwgRel)</dd>

                        <dt class="col-md-6">Approval Drawing Returned</dt>
                        <dd class="col-md-6">@Html.DisplayFor(model => model.AppDwgRet)</dd>
                    </dl>
                </div>
            </div>

            <div class="col-md-6">
                <div class="info-box p-3 bg-light border rounded">
                    <h5 class="fw-bold text-center section-header">Engineering & Customer Details</h5>
                    <dl class="row">
                        <dt class="col-md-6">Pre-Order Expected</dt>
                        <dd class="col-md-6">@Html.DisplayFor(model => model.PreOExp)</dd>

                        <dt class="col-md-6">Pre-Order Release</dt>
                        <dd class="col-md-6">@Html.DisplayFor(model => model.PreORel)</dd>

                        <dt class="col-md-6">Engineering Package Expected</dt>
                        <dd class="col-md-6">@Html.DisplayFor(model => model.EngPExp)</dd>

                        <dt class="col-md-6">Engineering Package Release</dt>
                        <dd class="col-md-6">@Html.DisplayFor(model => model.EngPRel)</dd>

                        <dt class="col-md-6">Customer</dt>
                        <dd class="col-md-6">@Html.DisplayFor(model => model.CompanyName)</dd>

                        <dt class="col-md-6">Shipping Terms</dt>
                        <dd class="col-md-6">@Html.DisplayFor(model => model.ShippingTerms)</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div>
            <h4 class="section-header text-center fw-bold">Machines and Procurement Information</h4>
            <table class="table table-striped table-bordered table-hover shadow-sm procurement-table">
                <thead class="bg-dark text-white text-center">
                    <tr>
                        <th>Machine Type & Serial Number</th>
                        <th>Vendor</th>
                        <th>PO Number</th>
                        <th>Exp Due Date</th>
                        <th>PO Due Date</th>
                        <th>PO Received Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var machine in Model.Machines)
                    {
                        if (machine.Procurements != null && machine.Procurements.Any())
                        {
                            bool firstRow = true;
                            foreach (var procurement in machine.Procurements)
                            {
                                <tr>
                                    @if (firstRow)
                                    {
                                        <td rowspan="@machine.Procurements.Count">@Html.DisplayFor(m => machine.Description)</td>
                                        firstRow = false;
                                    }

                                    <td>@Html.DisplayFor(m => procurement.Vendor.Name)</td>
                                    <td>@Html.DisplayFor(m => procurement.PONumber)</td>
                                    <td>@Html.DisplayFor(m => procurement.ExpDueDate)</td>
                                    <td>@Html.DisplayFor(m => procurement.PODueDate)</td>
                                    <td>@Html.DisplayFor(m => procurement.PORcd)</td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td>@Html.DisplayFor(m => machine.Description)</td>
                                <td colspan="5" class="text-center text-muted">No Procurement Details</td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="text-end mb-3">
            @if (Model?.Status == Status.Completed)
            {
                <span class="badge bg-success">Completed</span>
                <a asp-action="Index" class="ms-3 btn btn-sm"><i class="fa fa-arrow-left" aria-hidden="true"></i> Back to List</a>
            }
            else
            {
                @if (Model?.Status != Status.Archived)
                {
                    <a asp-action="Edit" asp-route-id="@Model?.ID" class="ms-3 btn btn-sm"><i class="fa-solid fa-pen-to-square"></i> Edit</a>
                }

                <a asp-action="Index" class="ms-3 btn btn-sm"><i class="fa fa-arrow-left" aria-hidden="true"></i> Back to List</a>

                @if (Model?.Status != Status.Completed && Model?.Status != Status.Archived)
                {
                    <a asp-action="Complete" asp-controller="SalesOrder" asp-route-id="@Model?.ID" class="btn btn-sm ms-3" onclick="return confirm('Are you sure you want to mark this sales order as completed?');">
                        <i class="fa fa-check" aria-hidden="true"></i>  Mark as Completed
                    </a>
                }
                <button href="#" onclick="printPrintableArea()" return false;" class="ms-3 btn btn-sm "> <i class="fa-solid fa-print"></i> Print</button>

            }
        </div>
    </div>
</div>

<script type="text/javascript">
    var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
    var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl)
    })
</script>

<script>
    function printPrintableArea() {
        window.print();
    }
</script>

<style>
    .row {
        display: flex;
        flex-wrap: wrap;
        align-items: stretch;
    }

    .col-md-6 {
        display: flex;
        flex-direction: column;
    }

    .info-box {
        flex-grow: 1;
        background-color: #f8f9fa;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 20px;
        margin-bottom: 20px;
    }

    .section-header {
        font-size: 1.4rem;
        font-weight: bold;
        text-transform: uppercase;
        text-align: center;
        border-bottom: 2px solid #ddd;
        padding-bottom: 8px;
        margin-bottom: 15px;
    }

    dl.row {
        display: flex;
        flex-wrap: wrap;
    }

        dl.row dt, dl.row dd {
            width: 50%;
            padding: 10px 0;
            border-bottom: 1px solid #ddd;
        }

        dl.row dt {
            font-weight: 600;
            color: #444;
            text-align: left;
            font-size: 1rem;
        }

        dl.row dd {
            text-align: right;
            color: #333;
            font-size: 1rem; 
        }

    .info-box dl {
        margin-bottom: 0;
    }

    .procurement-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
    }

        .procurement-table th {
            background-color: #343a40;
            color: white;
            text-align: center;
            padding: 10px;
        }

        .procurement-table td {
            text-align: center;
            padding: 8px;
            border: 1px solid #ddd;
        }

    .text-end {
        display: flex;
        justify-content: flex-start !important;
        margin-top: 20px;
    }

        .text-end .btn {
            padding: 10px 15px;
            font-size: 14px;
            margin-right: 10px;
        }


</style>
