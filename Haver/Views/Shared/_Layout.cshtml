<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - haver</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/haver.styles.css" asp-append-version="true" />
	<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css" />
	@await RenderSectionAsync("Head", required: false)
	<link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css" rel="stylesheet">
	<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>

	@await RenderSectionAsync("Stylesheets", required: false)


</head>
<body>

	<!-- Hidden field to store sidebar state -->
	<input type="hidden" id="sidebarState" value="active" />

	<button class="hamburger-btn" onclick="toggleSidebar()">
		<i class="fa fa-bars"></i>
	</button>

	<!-- Sidebar -->
	<div class="sidebar" id="sidebar">

		<div class="sidebar-menu">
			<a href="@Url.Action("Index", "Home")">Home</a>

			<button onclick="scrollToTop()" id="scrollToTopBtn" class="btn btn-primary">
				<i class="fa-solid fa-arrow-up"></i>
			</button>

			<!-- Sales Order Links -->
			<div>
				<a asp-area="" asp-controller="SalesOrder" asp-action="Index">Sales Orders</a>

			</div>

			<div class="dropdown">
				<a href="#" class="dropdown-btn" onclick="toggleDropdown(event)">
					Machine <i class="fa fa-plus"></i>
				</a>
				<div class="dropdown-content">
					<a asp-area="" asp-controller="MachineType" asp-action="Index">Machine Types</a>
					<a asp-area="" asp-controller="Machine" asp-action="Index">Machines(WIP)</a>
				</div>
			</div>

			<!-- Vendor Links -->
			<div>
				<a asp-area="" asp-controller="Vendor" asp-action="Index">Vendors</a>
			</div>

			<!-- Engineer Links -->
			<div>
				<a asp-area="" asp-controller="Engineer" asp-action="Index">Engineers</a>

			</div>

			<div>
				<a asp-area="" asp-controller="GanttData" asp-action="Index">Gantt</a>

			</div>

			

			<div class="sidebar-menu">

				<a asp-area="" asp-controller="SalesOrder" asp-action="DownloadMachineSchedules">Download Schedule</a>

			</div>

		</div>
		<img src="/Images/LOGO_NIAGARA_BRANCO_com_Fundo azul.png" alt="Logo for Haver" class="sidebar-logo">
	</div>

	<!-- Main Content -->
	<div class="main-content">
		<main role="main">
			@RenderBody()
		</main>
	</div>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
	/* General Styles */
	body {
		display: flex;
		margin: 0;
		height: 100vh;
		padding-top: 40px; /* Adjust to required space */
		padding-left: 40px; /* Adjust to required space */

		color: #001a3d;
		font-family: Arial, sans-serif;
	}

	/* Sidebar */
	.sidebar {
		width: 250px;
		background-color: #001a3d;
		padding: 20px;
		color: white;
		display: flex;
		flex-direction: column;
		position: fixed;
		height: 100vh;
		left: -250px;
		top: 0;
		transition: left 0.3s ease-in-out;
		z-index: 1000;
	}

		.sidebar.active {
			left: 0;
		}

	.sidebar-menu {
		display: flex;
		flex-direction: column;
		margin-top: 60px;
	}

	/* Sidebar Links */
	.sidebar a,
	.dropdown-btn {
		display: flex;
		justify-content: space-between;
		align-items: center;
		width: 100%;
		padding: 12px;
		font-weight: bold;
		text-align: left;
		color: white;
		text-decoration: none;
		border-radius: 5px;
		transition: background 0.3s;
	}

		.sidebar a:hover {
			background: #2a497b;
		}

	/* Hamburger Button */
	.hamburger-btn {
		position: fixed;
		top: 15px;
		left: 25px;
		background: none;
		border: none;
		font-size: 24px;
		color: #001a3d;
		cursor: pointer;
		z-index: 1001;
		transition: color 0.3s ease-in-out;
	}

	.sidebar.active ~ .hamburger-btn {
		color: white !important;
	}

	/* Main Content */
	.main-content {
		margin-left: 0;
		padding: 20px;
		width: 100%;
		transition: margin-left 0.3s ease-in-out;
	}

	.sidebar.active ~ .main-content {
		margin-left: 250px;
		width: calc(100% - 250px);
	}

	/* Dropdown */
	.dropdown {
		width: 100%;
		position: relative;
		text-align: center;
	}

	.dropdown-btn i {
		transition: transform 0.3s ease;
		flex-shrink: 0;
		width: 20px;
		text-align: right;
	}

	.dropdown.active .dropdown-btn i {
		transform: rotate(90deg);
	}

	.dropdown-content {
		display: none;
		flex-direction: column;
		background-color: #002b5e;
		width: 100%;
		padding: 5px 0;
	}

	.dropdown.active .dropdown-content {
		display: flex;
	}

	.dropdown-content a {
		color: white;
		padding: 10px;
		font-size: 16px;
		text-align: center;
		display: block;
		text-decoration: none;
	}

		.dropdown-content a:hover {
			background: rgba(255, 255, 255, 0.2);
		}

	/* Sidebar Logo */
	.sidebar-logo {
		width: 200px;
		margin-top: auto;
		text-align: center;
		padding-top: 20px;
	}

	/* Scroll to Top Button */
	#scrollToTopBtn {
		position: fixed;
		bottom: 20px;
		right: 20px;
		display: none;
		z-index: 1000;
		border: none;
		background-color: #007bff;
		color: white;
		cursor: pointer;
		padding: 10px 15px;
		border-radius: 50%;
		font-size: 20px;
		box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
		transition: opacity 0.3s ease-in-out;
	}

		#scrollToTopBtn:hover {
			background-color: #0056b3;
		}

</style>
<script>
	// Toggle Sidebar
	function toggleSidebar() {
		var sidebar = document.getElementById("sidebar");
		var sidebarStateInput = document.getElementById("sidebarState");
		var hamburgerBtn = document.querySelector(".hamburger-btn i"); // Select the hamburger icon

		// Toggle the sidebar class
		sidebar.classList.toggle("active");

		// Update hidden field value
		sidebarStateInput.value = sidebar.classList.contains("active") ? "active" : "inactive";

		// Change hamburger button color based on sidebar state
		if (sidebar.classList.contains("active")) {
			hamburgerBtn.style.color = "white"; // White when sidebar is open
		} else {
			hamburgerBtn.style.color = "#001a3d"; // Default color when collapsed
		}
	}

	// Restore Sidebar State on Page Load
	document.addEventListener("DOMContentLoaded", function () {
		var sidebarStateInput = document.getElementById("sidebarState");
		var sidebar = document.getElementById("sidebar");
		var hamburgerBtn = document.querySelector(".hamburger-btn i"); // Select the hamburger icon

		// If the state was "active", make sure sidebar stays open
		if (sidebarStateInput.value === "active") {
			sidebar.classList.add("active");
			hamburgerBtn.style.color = "white"; // Ensure white color when sidebar is active
		}
	});

	// Toggle Dropdowns
	function toggleDropdown(event) {
		event.preventDefault();
		let dropdown = event.target.closest('.dropdown');
		dropdown.classList.toggle('active');

		// Close other dropdowns
		document.querySelectorAll('.dropdown').forEach(d => {
			if (d !== dropdown) {
				d.classList.remove('active');
			}
		});
	}

	// Show/hide Scroll To Top Button
	window.onscroll = function () {
		var btn = document.getElementById("scrollToTopBtn");
		btn.style.display = (document.documentElement.scrollTop > 300) ? "block" : "none";
	};

	// Scroll to Top
	function scrollToTop() {
		window.scrollTo({ top: 0, behavior: "smooth" });
	}
</script>

